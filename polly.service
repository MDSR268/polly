[Unit]
Description=Polly Discord Poll Bot
After=network.target

[Service]
Type=exec
User=xyn0th
Group=xyn0th
WorkingDirectory=/home/xyn0th/polly
Environment=PATH=/home/xyn0th/polly/.venv/bin
ExecStart=/usr/bin/uv run python -m polly.main
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Environment variables (add your actual values)
Environment=DISCORD_TOKEN=your_discord_token_here
Environment=DATABASE_URL=sqlite:///polly.db

[Install]
WantedBy=multi-user.target
